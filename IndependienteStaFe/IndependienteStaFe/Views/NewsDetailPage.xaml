             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="IndependienteStaFe.Views.NewsDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="name" Text=""
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <WebView x:Name="content" VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Image x:Name="image"  />
            
            <Label x:Name="date" Text=""
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>